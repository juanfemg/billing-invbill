<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.bytecode.use_reflection_optimizer">false</property>
		<property name="show_sql">false</property>
		<property name="hibernate.enable_lazy_load_no_trans">true</property>
		<property name="hibernate.connection.pool_size">10</property>
		<property name="hibernate.ejb.naming_strategy">org.hibernate.cfg.ImprovedNamingStrategy</property>
		<mapping resource="co/com/juan/invbill/model/NamedQuery.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/LoginApp.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/UsuarioApp.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/RolApp.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/CategoriaProducto.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/Producto.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/StockProducto.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/FacturaCabecera.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/FacturaDetalle.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/ProveedorApp.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/CompraCabecera.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/CompraDetalle.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/DevolucionCabecera.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/DevolucionDetalle.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/AppConfig.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/AppMenu.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/TipoUnidadMedida.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/TipoPeriodo.hbm.xml" />
		<mapping resource="co/com/juan/invbill/model/ClienteApp.hbm.xml" />
	</session-factory>
</hibernate-configuration>
