<?xml version="1.0"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/dashboard.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/login.xhtml?authfailed=true</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/j_spring_security_logout?faces-redirect=true</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>dashboard</from-outcome>
			<to-view-id>/dashboard.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goConfiguracion</from-outcome>
			<to-view-id>/CONFIGURACION/gestionConfiguracion.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goCrearUsuario</from-outcome>
			<to-view-id>/ADMINISTRACION/crearUsuario.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goConsultarUsuario</from-outcome>
			<to-view-id>/ADMINISTRACION/consultarUsuario.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goCrearCategoria</from-outcome>
			<to-view-id>/ADMINISTRACION/crearCategoria.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goConsultarCategoria</from-outcome>
			<to-view-id>/ADMINISTRACION/consultarCategoria.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goCrearProducto</from-outcome>
			<to-view-id>/ADMINISTRACION/crearProducto.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goConsultarProducto</from-outcome>
			<to-view-id>/ADMINISTRACION/consultarProducto.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goCrearProveedor</from-outcome>
			<to-view-id>/ADMINISTRACION/crearProveedor.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goConsultarProveedor</from-outcome>
			<to-view-id>/ADMINISTRACION/consultarProveedor.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goGestionProductos</from-outcome>
			<to-view-id>/INVENTARIO/gestionProductos.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goCrearFactura</from-outcome>
			<to-view-id>/VENTAS/crearFactura.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goConsultarFactura</from-outcome>
			<to-view-id>/VENTAS/consultarFactura.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goRegistrarDevolucion</from-outcome>
			<to-view-id>/VENTAS/registrarDevolucion.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goConsultarDevolucion</from-outcome>
			<to-view-id>/VENTAS/consultarDevolucion.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goRegistrarCompra</from-outcome>
			<to-view-id>/COMPRAS/registrarCompra.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goConsultarCompra</from-outcome>
			<to-view-id>/COMPRAS/consultarCompra.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goReporteProductos</from-outcome>
			<to-view-id>/REPORTES/reporteProductos.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>goReporteVentas</from-outcome>
			<to-view-id>/REPORTES/reporteVentas.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/COMPRAS/*</from-view-id>
		<navigation-case>
			<from-outcome>goConsultarCompraDetalle</from-outcome>
			<to-view-id>/COMPRAS/consultarCompraDetalle.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>goConsultarCompra</from-outcome>
			<to-view-id>/COMPRAS/consultarCompra.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/VENTAS/*</from-view-id>
		<navigation-case>
			<from-outcome>goConsultarDevolucionDetalle</from-outcome>
			<to-view-id>/VENTAS/consultarDevolucionDetalle.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>goConsultarDevolucion</from-outcome>
			<to-view-id>/VENTAS/consultarDevolucion.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>goConsultarFacturaDetalle</from-outcome>
			<to-view-id>/VENTAS/consultarFacturaDetalle.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>goConsultarFactura</from-outcome>
			<to-view-id>/VENTAS/consultarFactura.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>
</faces-config>
